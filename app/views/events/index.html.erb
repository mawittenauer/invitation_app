<div class="container mt-4">
  <h1>My Events</h1>
  
  <div class="mb-3">
    <%= link_to 'Create New Event', new_event_path, class: 'btn btn-primary' %>
  </div>
  
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.description.truncate(100) %></p>
            <p class="card-text">
              <small class="text-muted">
                <%= event.start_time.strftime("%B %d, %Y at %I:%M %p") %>
              </small>
            </p>
            <%= link_to 'View Details', event_path(event), class: 'btn btn-sm btn-outline-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
