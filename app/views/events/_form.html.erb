<!-- app/views/events/_form.html.erb -->
<%= form_with(model: event, local: true, class: 'needs-validation') do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h4>
      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :title, class: 'form-label' %>
        <%= form.text_field :title, class: 'form-control', required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: 'form-label' %>
        <%= form.text_area :description, class: 'form-control', rows: 5 %>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= form.label :start_time, class: 'form-label' %>
          <%= form.datetime_local_field :start_time, class: 'form-control', required: true %>
        </div>
        <div class="col-md-6">
          <%= form.label :end_time, class: 'form-label' %>
          <%= form.datetime_local_field :end_time, class: 'form-control', required: true %>
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :location, class: 'form-label' %>
        <%= form.text_field :location, class: 'form-control', required: true %>
      </div>

      <div class="d-grid gap-2">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
